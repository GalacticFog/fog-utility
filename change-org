#!/usr/bin/env node
const selectHierarchy = require('./lib/selectHierarchy');

try {
    selectHierarchy.displayContext();
    selectHierarchy.chooseOrg(() => {
        selectHierarchy.displayContext();        
    });
} catch (err) {
    console.log(err.message);
    console.log("Try running 'change-context'");
    console.log();
}
