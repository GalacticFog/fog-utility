#!/usr/bin/env node
const argv = require('yargs').argv
const gestalt = require('./lib/gestalt')
const selectContainer = require('./lib/selectContainer');

function showRaw(c) {
    console.log()
    console.log(JSON.stringify(c, null, 2));
    // console.log(c);
    console.log()
}

// Main
try {

    // 1) Select Container

    selectContainer.run((result) => {

        // 2) Show container details

        const container = gestalt.fetchContainer(result.container.id);  //fetch from current context

        showRaw(container);
    });
} catch (err) {
    console.log(err.message);
    console.log("Try running 'switch-context'");
    console.log();
}
